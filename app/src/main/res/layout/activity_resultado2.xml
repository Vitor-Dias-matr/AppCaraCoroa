<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Resultado2Activity">
    <ImageView
            android:layout_width="141dp"
            android:layout_height="128dp" app:srcCompat="@drawable/heads"
            android:id="@+id/image1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="148dp"
            android:layout_height="134dp" app:srcCompat="@drawable/heads"
            android:id="@+id/image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="208dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/image3"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="117dp"
            android:layout_height="134dp" app:srcCompat="@drawable/heads"
            android:id="@+id/image3"
            android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="Jogar"
            android:layout_width="119dp"
            android:layout_height="61dp"
            android:id="@+id/butonJogar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:onClick="sortearMoeda" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503"/>
    <TextView
            android:layout_width="67dp"
            android:layout_height="23dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="56dp"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/image2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="54dp"
            android:layout_height="22dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/image3"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>